<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_booking_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.lenovo.omecmart.bookingservice"
    android:background="#eff0f2"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#fefefe"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="#fefefe"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/lokasi" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:text="Masukkan alamat lengkap bengkell"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="18dp" />

    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eff0f2"
        >


    </GridLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fefefe"
        android:layout_weight="0.27">


        <LinearLayout
            android:layout_gravity="center"
            android:background="#187bb6"
            android:layout_width="294dp"
            android:layout_height="74dp"
            android:weightSum="1"
            android:layout_marginLeft="30sp"
            >


            <ImageButton
                android:layout_width="45dp"
                android:layout_height="43dp"
                app:srcCompat="@drawable/lokasi2"
                android:id="@+id/imageButton3"
                android:scaleType="fitCenter"
                android:background="#187bb6"
                android:layout_margin="10sp"
                />

            <TextView
                android:text="Atau cari lokasi bengkel menggunakan GPS /maps"
                android:textSize="17sp"
                android:textColor="#fefefe"
                android:paddingLeft="30sp"
                android:paddingTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView4"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#eff0f2"
            />

        <TextView
            android:text="Waktu"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView5"
            android:textAlignment="center"
            android:background="#fefefe" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#fefefe"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/button4"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:background="#187bb6"
            android:text="Tanggal"
            android:textColor="#fefefe" />

        <Button
            android:id="@+id/button2"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:background="#187bb6"
            android:text="Jam"
            android:textColor="#fefefe" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20sp"/>

        <Button
            android:text="Booking"
            android:textColor="#fefefe"
            android:layout_width="118dp"
            android:background="#187bb6"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_marginLeft="120sp"

            />

    </LinearLayout>


</LinearLayout>
