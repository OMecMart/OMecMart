<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.omecmart.Profil">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:background="#fff"
        android:layout_weight="0.21">

        <ImageView
            android:layout_width="166dp"
            android:layout_height="114dp"
            app:srcCompat="@drawable/polije"
            android:id="@+id/imageView4"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />

        <TextView
            android:text="Nama Customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewUsername"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            android:text="emailcustomer@email.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEmail"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            android:text="+6289345678000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNomor"
            android:textAlignment="center"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#fff"
        android:layout_marginTop="10sp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="241dp"
            android:layout_height="match_parent">

            <TextView
                android:text="Username"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:fontFamily="arial"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:textSize="18sp" />

            <TextView
                android:text="nama_customer"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewNama"
                android:fontFamily="arial"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#fff"
        android:layout_marginTop="10sp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="242dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="Password"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:fontFamily="arial"
                android:textColor="@android:color/black"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5sp"
                android:textSize="18sp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#fff"
        android:layout_marginTop="10sp"
        android:layout_weight="0.24">

        <LinearLayout
            android:layout_width="245dp"
            android:layout_height="61dp"
            android:orientation="vertical">

            <TextView
                android:text="Email"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:fontFamily="arial"
                android:textColor="@android:color/black"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5sp"
                android:textSize="18sp" />

            <TextView
                android:text="Email Customer"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewEmail"
                android:fontFamily="arial"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10dp"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>
