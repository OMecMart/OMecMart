<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_daftar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.lenovo.omecmart.Daftar">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:text="OMecMart"
            android:paddingLeft="60dp"
            android:textSize="50sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eff0f2">


        <ImageView
            android:layout_width="30dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/email"
            android:id="@+id/imageView2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:background="#eff0f2"
            android:paddingLeft="10dp"
            android:hint="Email (nama@gmail.com)"
            android:textColorHint="@android:color/black"
            android:ems="10"
            android:id="@+id/editText10"
            android:layout_weight="0.03" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eff0f2">

        <ImageView
            android:layout_width="30dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/akun"
            android:id="@+id/imageView3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:hint="Nama"
            android:textColorHint="@android:color/black"
            android:paddingLeft="10dp"
            android:ems="10"
            android:id="@+id/editText12" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eff0f2"
        android:weightSum="1">


        <ImageView
            android:layout_width="30dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tlp"
            android:id="@+id/imageView4" />

        <EditText
            android:layout_width="68dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:hint="+62"
            android:textColorHint="@android:color/black"
            android:ems="10"
            android:id="@+id/editText13" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText14"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eff0f2"
        android:weightSum="1">

        <ImageView
            android:layout_width="30dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pass"
            android:id="@+id/imageView8" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Kata Sandi"
            android:textColorHint="@android:color/black"
            android:id="@+id/editText15"
            android:layout_weight="0.94" />

        <ImageButton
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sandi"
            android:id="@+id/imageButton3"
            android:background="#eff0f2"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:background="#eff0f2"
        android:layout_height="15dp"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#eff0f2"
        android:layout_height="wrap_content">

        <Button
            android:text="Daftar"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:background="#187bb6"
            android:layout_height="37dp"
            android:id="@+id/button3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="#eff0f2"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:text="Dengan mendaftar, Saya setuju dengan ketentuan layanan dan kebijakan privasi"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"
            android:id="@+id/textView4" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Sudah punya akun?"
            android:paddingLeft="50dp"
            android:ems="10"
            android:id="@+id/editText18" />

        <Button
            android:text="Masuk"
            android:textSize="17sp"
            android:textColor="#187bb6"
            android:background="#fefefe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1" />


    </LinearLayout>



</LinearLayout>

