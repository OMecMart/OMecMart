<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.omecmart.login"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="456dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#fefefe"
            android:weightSum="1"
            android:layout_weight="0.13">

            <TextView
                android:text="OMecMart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/textView2"
                android:layout_weight="0.60"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="#eff0f2"
            android:layout_height="263dp"
            android:weightSum="1"
            android:layout_weight="0.83">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="41dp"
                    android:layout_height="31dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/email" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextUsername"
                    android:layout_weight="1"
                    android:hint="Email (nama@email.com)"
                    android:textColorHint="#000"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="0.02"
                android:layout_marginTop="20sp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="31dp"
                    app:srcCompat="@drawable/pass"
                    android:id="@+id/imageView3"
                    android:scaleType="fitCenter" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextPassword"
                    android:hint="Kata Sandi"
                    android:textColorHint="#000"
                    android:layout_weight="1.01"
                    android:textSize="14sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="50dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        app:srcCompat="@drawable/sandi"
                        android:id="@+id/imageButton"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="4sp"
                        android:backgroundTint="#eff0f2"
                        android:elevation="0dp"
                        android:background="#eff0f2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:layout_weight="0.19"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_weight="0.55"></LinearLayout>

                <Button
                    android:text="MASUK"
                    android:layout_width="279dp"
                    android:layout_gravity="center"
                    android:background="#187bb6"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonLogin" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_weight="0.25"></LinearLayout>

                <TextView
                    android:text="Lupa Kata Sandi?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:id="@+id/textView3"
                    android:layout_weight="0.33"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="0.08"
                android:background="#fff"
                android:lineSpacingExtra="8sp"
                android:text="Belum Punya Akun?"
                android:textAlignment="center"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:background="#FFFFFF"
                android:text="     Daftar"
                android:textAlignment="center"
                android:textColor="#187bb6"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="#000000"></LinearLayout>

    </LinearLayout>

</LinearLayout>
